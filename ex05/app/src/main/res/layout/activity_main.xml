<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giải Phương Trình Bậc 2"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>

    <!-- Input field for 'a' -->
    <EditText
        android:id="@+id/edta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập hệ số a"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"/>

    <!-- Input field for 'b' -->
    <EditText
        android:id="@+id/edtb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập hệ số b"
        android:inputType="number"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"/>

    <!-- Input field for 'c' -->
    <EditText
        android:id="@+id/edtc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập hệ số c"
        android:inputType="number"
        android:layout_marginBottom="20dp"
        android:textSize="18sp"/>

    <!-- Button to solve the equation -->
    <Button
        android:id="@+id/btngiaipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giải Phương Trình"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <!-- Button to reset the inputs -->
    <Button
        android:id="@+id/btntieptuc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp Tục"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"/>

    <!-- Button to exit the application -->
    <Button
        android:id="@+id/btnthoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thoát"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"/>

    <!-- TextView to display the result -->
    <TextView
        android:id="@+id/txtkq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả:"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
</LinearLayout>
